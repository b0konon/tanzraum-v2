{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Kurse"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "day": {
      "type": "enumeration",
      "enum": [
        "Montag",
        "Dienstag",
        "Mittwoch",
        "Donnerstag",
        "Freitag"
      ]
    },
    "starttime": {
      "type": "string",
      "default": "08:00",
      "required": true,
      "regex": "^([01]\\d|2[0-3]):[0-5]\\d$"
    },
    "endtime": {
      "type": "string",
      "default": "09:00",
      "required": true,
      "regex": "^([01]\\d|2[0-3]):[0-5]\\d$"
    },
    "level": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "trainer": {
      "type": "enumeration",
      "enum": [
        "Bettina",
        "Susanne",
        "Alena"
      ]
    }
  }
}
